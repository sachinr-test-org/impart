- content_for :sidebar do
  =render 'layouts/default_sidebar'

%h4 Users

%table.table.table-striped
  %thead
    %tr
      %th Name
      %th Email
      %th Role
      %th Confirmed?
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.username
        %td= user.email
        %td= user.role
        %td
          = check_box_tag :confirmed, '1', user.confirmed, class: 'js_confirm_user', 'data-url' => confirm_admin_user_path(user)
        %td
          %a{href: edit_admin_user_path(user)}
            %i.icon-pencil
          %a{href: admin_user_path(user), method: :delete, confirm: 'Are you sure?'}
            %i.icon-trash
