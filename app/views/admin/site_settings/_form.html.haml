= form_for [:admin, @site_setting], :html => { :class => 'form-horizontal' } do |f|
  = f.error_notification

  = f.control_group :name do |f|
    = f.label :name, class: 'control-label'
    .controls
      %span.uneditable-input= @site_setting.name.titlecase

  = f.control_group :value do |f|
    = f.label :value, class: 'control-label'
    .controls
      - if @site_setting.value_type == 'boolean'
        = f.check_box(:value, {}, "true", "false")
      - else
        -if @site_setting.value_type == 'integer'
          = f.number_field :value, class: 'input-xxlarge'
        -else
          = f.text_field :value, class: 'input-xxlarge'
      = f.error_messages

    .form-actions
      =f.submit "Update", class: 'btn btn-primary'
