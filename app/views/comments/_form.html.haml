- if current_user
  .comment-template
    = form_for comment  do |f|
      = f.hidden_field :commentable_id
      = f.hidden_field :commentable_type

      .control-group
        .controls
          = f.text_area :content, class: 'input-block-level', rows: rows
        = link_to 'Comment', '#', :class => 'btn btn-primary btn-small js_comment_submit_button'
- else
  %code Please login to comment
