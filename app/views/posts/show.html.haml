- model_class = Post
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:votes)
      %th= model_class.human_attribute_name(:title)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    %tr
      %td
        = @post.votes
        = link_to 'upvote', '#', class: 'js_upvote', 'data-post-id' => @post.id
      %td
        %h3
          = link_to @post.title, post_path(@post)
          %span.url= "(#{@post.url})"
        %span.age= "#{time_ago_in_words(@post.created_at)} by #{@post.user.email}"
      %td
        = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(@post), :class => 'btn btn-mini'
        = link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(@post), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger btn-mini'

.well
  %p= @post.description

=render 'comments/form', comment: @comment

=render 'comments/listing', comments: @comments
