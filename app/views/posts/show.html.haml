.post-information
  .row
    .span9
      = render 'post_upvote', post: @post

      %span.pull-left.post-content
        %h3
          = link_to @post.title, @post.url, target: '_blank'
          %span.url= "(#{url_host(@post.url)})"

        - if @post.description.present?
          .row-fluid
            .well.well-small.table-bordered.description
              %p= BlueCloth.new(@post.description).to_html.html_safe

        %span.age= "Posted #{time_ago_in_words(@post.created_at)} by #{@post.user_name}"
        - if @post.can_be_edited_by(current_user)
          %span= " | #{ link_to 'edit', edit_post_path(@post) } | #{ link_to 'delete', post_path(@post), method: :delete, confirm: 'Are you sure?' }".html_safe

%hr

%h5
  ="Showing #{pluralize(@post.comment_count, 'comment')}"

.row-fluid
  .span5
    .post-comment-form
      =render 'comments/form', comment: @comment

.comment-listing
  =render 'comments/listing', comments: @comments
