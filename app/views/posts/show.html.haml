.post-information
  .row
    .span9
      %span.post_votes.pull-left
        = @post.votes
        %a.upvote.js_upvote{ 'data-post-id' => @post.id, href: '#' }
          %i.icon-arrow-up

      %span.pull-left.post-content
        %h3
          = link_to @post.title, post_path(@post)
          %span.url= "(#{@post.url})"

        - if @post.description.present?
          .row-fluid
            .well.well-small.table-bordered.description
              %p= BlueCloth.new(@post.description).to_html.html_safe

        %span.age= "Posted #{time_ago_in_words(@post.created_at)} by #{@post.user.email}"

%hr

%h5
  ="Showing #{pluralize(@post.comment_count, 'comment')}"

.row-fluid
  .span5
    .post-comment-form
      =render 'comments/form', comment: @comment

.comment-listing
  =render 'comments/listing', comments: @comments
