%tr
  %td.vote_count
    = render 'post_upvote', post: post
  %td
    %h4
      = link_to post.title, post.url, target: '_blank'
      %span.url= "(#{url_host(post.url)})"
    %span.post-info-link
      %a{href: '#'}
        %i.icon-plus
    %span.post-info-link
      %a{href: post_path(post)}
        %i.icon-comment
          = post.comment_count
    %span.age= "#{time_ago_in_words(post.created_at)} ago by #{post.user_name}"

  %td
    - if post.can_be_edited_by(current_user)
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_post_path(post), :class => 'btn btn-mini'
      = link_to t('.destroy', :default => t("helpers.links.destroy")), post_path(post), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
